<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aristidevs.nuwelogin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NuweLoginApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVVMExample">
        <activity android:name=".ui.verification.VerificationActivity"></activity>
        <activity android:name=".ui.signin.SignInActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.view.MainActivity" />
        <activity android:name=".ui.introduction.IntroductionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>